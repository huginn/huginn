{

"name" : "huginn_production_centos",

"chef_type" : "role",

"json_class" : "Chef::Role",

"description" : "Huginn Production Environment (CentOS)",

"default_attributes" : {
  "sudo": {
    "include_sudoers_d": true
  },
  "mysql": {
    "server_root_password": "password",
    "server_repl_password": "",
    "server_debian_password": ""
  },
  "nginx" : {
    "init_style" : "upstart"
  },
  "huginn": {
    "user": "huginn"
  }
},

